# Environment settings for running Econ Simulator inside Docker Compose

# PostgreSQL connection (service name "postgres" within the network)
ECON_SIM_POSTGRES_DSN=postgresql://econ:econ@postgres:5432/econ_simulator
ECON_SIM_POSTGRES_SCHEMA=public
ECON_SIM_POSTGRES_MIN_POOL=1
ECON_SIM_POSTGRES_MAX_POOL=5

# Redis connection string (service name "redis")
ECON_SIM_REDIS_URL=redis://redis:6379/0

# Session secret (override in production)
ECON_SIM_SESSION_SECRET=econ-sim-session-key
